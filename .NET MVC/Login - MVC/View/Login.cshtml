
@{
    ViewBag.Title = "CMC码管理中心";
}
<style>
    .layui-fluid {
        padding: 0 0px;
    }
    .bgView {
        height:500px;
        background-color: #052c4d;
    }
    .bgviewImg {
        text-align:center;
    }
    .loginBg {
        border-radius: 10px;
        width: 320px;
        margin-top: 80px;
        background-color:#fff;
    }
    .icon {
        background-color: #bfbfbf;
        width: 38px;
        height: 38px;
        float:left;
    }
    .layui-input {
         width: 218px; 
    }
    .item {
        margin-bottom:15px;
    }
    .layui-input-inline .icon > img {
        margin-top: 8px;
        width: 20px;
    }
    .changePassWord>a {
        color: #50aefe;
        
    }
    .changePassWord {
        text-align: right;
        width:90%;
        height:40px;
    }
    .layui-logo {
        color: #fff;
        font-weight: 600;
        font-size: 40px;
        position:relative;
        top:30px;
    }
    .layui-input-inline{
        left:51px;
    }
</style>
<div ng-controller="loginController">
    <div class="layui-fluid" ng-keyup="enterEvent($event)">
        <div id="topView" class="layui-row" style="height:90px">
            <div class="layui-col-md2 layui-col-xs2 layui-col-lg2 layui-col-sm2 ">
                &nbsp;
            </div>
            <div class="layui-col-md4 layui-col-xs4 layui-col-lg4 layui-col-sm4 bgviewImg">
                <img id="logo" style="margin:10px" src="../Scripts/Images/logo.png" />
            </div>
            <div class="layui-col-md6 layui-col-xs6 layui-col-lg6 layui-col-sm6 ">
                &nbsp;
            </div>
        </div>
        <div class="layui-row bgView" style="background: url('../Scripts/Images/mengniu-bg.jpg')no-repeat; width:100%;background-size:100% 100%;">
                <div class="layui-col-md8 layui-col-xs6 layui-col-lg8 layui-col-sm6 bgviewImg">
                    @*<div class="layui-logo">码管理中心</div>
                    <img src="~/Scripts/Images/cmc-login-bg.png" />*@
                    &nbsp;
                </div>
                <div class="layui-col-md4 layui-col-xs6 layui-col-lg4 layui-col-sm6 layui-anim layui-m-anim-right">
                    <div class="loginBg">
                        <div class="layui-row" style="text-align:center;font-size:20px;color:#48abfe;height:90px">
                            <div id="topView" style="height:20px"></div>用户登录
                        </div>
                        <div class="layui-row item" id="item" style="text-align:center">
                            <div style="width:80%;">
                                <div class="layui-input-inline">
                                    <div class="icon"><img src="~/Scripts/Images/username.png" /></div>
                                    <input type="text" id="userName"  placeholder="用户名" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                        </div>
                        <div class="layui-row item" style="text-align:center">
                            <div style="width:80%;">
                                <div class="layui-input-inline">
                                    <div class="icon"><img src="~/Scripts/Images/pwd.png" /></div>
                                    <input type="password" id="passWord"  placeholder="密码" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                        </div>
                        <div class="changePassWord"><a href="" id="reset">重置</a></div>
                        <div class="layui-form-item " style="text-align:center">
                            <button class="layui-btn layui-btn-fluid" ng-click="login()" lay-filter="formDemo" style="width:80%">登录</button>
                            <div class="layui-input-block">
                                @*<button class="layui-btn layui-btn-primary" ng-click="reset()">重置</button>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
<script>
    $("#reset").click(function () {
        $("#userName").val('');
        $("#passWord").val('');
    });

    var winH = (window.innerHeight - 400) / 2.8;
    $("#topView").css("height", winH + 'px');
    $("#logo").css("padding-top", winH - 60 + 'px')
    var itemW = document.getElementById("item").offsetWidth;
    var leftW = itemW * 0.1;
    $(".layui-input-inline").css("left", leftW + 'px');
    layui.use(['form'], function () {
        var form = layui.form;
    });
</script>
